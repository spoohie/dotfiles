{
	// Cursor
	"cursor.cpp.disabledLanguages": [
		"plaintext",
		"markdown",
		"scminput"
	],
	// Editor
	"editor.fontFamily": "Hack Nerd Font, Fira Code, Hack, 'Courier New', monospace",
	"editor.inlineSuggest.enabled": true,
	"editor.minimap.enabled": false,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.unicodeHighlight.invisibleCharacters": false,
	"explorer.autoReveal": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.excludeGitIgnore": true,
	"files.autoSave": "onFocusChange",
	"files.autoSaveWhenNoErrors": true,
	"files.autoSaveWorkspaceFilesOnly": true,
	"files.exclude": {
		".git": true,
		".venv": true,
		"**/.venv": true,
		"**/.idea": true,
		"**/__pycache__": true,
		"**/.DS_Store": true,
		"**/cdk.out": true
	},
	"notebook.output.textLineLimit": 60,
	"search.useIgnoreFiles": false,
	"security.workspace.trust.untrustedFiles": "open",
	"terminal.integrated.enableMultiLinePasteWarning": "never",
	"terminal.integrated.fontFamily": "Hack Nerd Font",
	"terminal.integrated.fontSize": 13,
	"workbench.colorCustomizations": {
		"tree.indentGuidesStroke": "#98c37990"
	},
	"workbench.colorTheme": "Atom One Dark",
	"workbench.editor.openPositioning": "first",
	"workbench.editorLargeFileConfirmation": 200,
	"workbench.iconTheme": "vscode-icons",
	"workbench.productIconTheme": "fluent-icons",
	"workbench.tree.indent": 20,
	"workbench.tree.renderIndentGuides": "always",
	"editor.snippetSuggestions": "top",
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"workbench.editor.pinnedTabsOnSeparateRow": true,
	"window.density.editorTabHeight": "compact",
	"workbench.editor.limit.enabled": true,
	"workbench.editor.limit.value": 8,
	"editor.fontSize": 11,
	// Custom theme
	"vscode_custom_css.imports": [
		"file:///Users/karol.platkowski/repos/dotfiles/vscode/custom-vscode.css",
		"file:///Users/karol.platkowski/repos/dotfiles/vscode/vscode-script.js",
	],
	// Python
	"[python]": {
		"editor.defaultFormatter": "charliermarsh.ruff"
	},
	"python.analysis.ignore": [
		"*"
	],
	"python.analysis.inlayHints.functionReturnTypes": true,
	"python.createEnvironment.trigger": "off",
	"python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
	"python.terminal.activateEnvironment": true,
	// "python.experiments.optOutFrom": ["pythonTerminalEnvVarActivation"],
	"ruff.configuration": "--config=/Users/karol.platkowski/.ruff.toml",
	"ruff.nativeServer": "on",
	"ruff.logLevel": "info",
	"ruff.interpreter": [
		"/opt/homebrew/bin/python"
	],
	"macros": {
		"myRuff": [
			"ruff.executeFormat",
			"ruff.executeAutofix"
		]
	},
	// Extensions
	"gitlens.hovers.currentLine.over": "line",
	"markdown.preview.scrollEditorWithPreview": true,
	"markdown.preview.scrollPreviewWithEditor": true,
	"projectManager.git.baseFolders": [
		"/Users/karol.platkowski/repos"
	],
	"projectManager.git.ignoredFolders": [
		"node_modules",
		"out",
		"typings",
		"test",
		".haxelib",
		"graphyte-repos",
		".archive"
	],
	"projectManager.git.maxDepthRecursion": 1,
	"sqlite.recordsPerPage": 100,
	"vscode-pets.petSize": "medium",
	"vscode-pets.throwBallWithMouse": true,
	"vsicons.dontShowNewVersionMessage": true,
	"vscode-pets.theme": "forest",

}
